@model TimeTracker.DTOs.UserDTO

@{
    ViewData["Title"] = "Create";
}
<style>

    h1 {
        
        height: auto;
        margin-left:500px;
        margin-right: auto;
    }
    
    hr {
        width:450px;
        height: auto;
        margin-left:auto;
        margin-right: auto;
    }


</style>

<div>

    <h1>Create user</h1>
    <hr/>

    <div class="row" style="margin-left:auto;margin-right: auto;">

        <div class="col-md-4"  style="margin-left:auto;margin-right: auto;">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartedWorkDayAt" class="control-label"></label>
                    <input asp-for="StartedWorkDayAt" class="form-control" />
                    <span asp-validation-for="StartedWorkDayAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Break" class="control-label"></label>
                    <input asp-for="Break" class="form-control" />
                    <span asp-validation-for="Break" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FinishedWorkDayAt" class="control-label"></label>
                    <input asp-for="FinishedWorkDayAt" class="form-control" />
                    <span asp-validation-for="FinishedWorkDayAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="GetAttendance" class="btn btn-primary">Back to listofUsers</a>
                </div>

            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
