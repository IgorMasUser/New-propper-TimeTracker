@model IEnumerable<Contracts.ApprovalStatus>

@{
    ViewData["Title"] = "UsersApprovalStatus";
}


<body>
    <h1>Check my notifications</h1>
    <table>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>
                        @message.ApprovalId
                    </td>
                    <td>
                        <a asp-controller="Notification" asp-action="DeleteNotification"> @message.State</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>

