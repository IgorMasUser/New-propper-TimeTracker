@model IEnumerable<TimeTracker.Models.User>

@{
    ViewData["Title"] = "View Users";
}

<style>

    div {
        width: 33%;
        height: auto;
        margin-left: auto;
        margin-right: auto;
    }

    table {
        margin-left: auto;
        margin-right: auto;
        font-size: 18px;
        width: auto;
        height: auto;
        border-right: 2px solid #708090;
        border-left: 2px solid #708090;
        border-top: 7px solid #708090;
        border-bottom: 7px solid #708090;
        background: #FFFAFA;
    }

    th {
        font-size: 18px;
        font-weight: normal;
        padding: 10px;
        border-bottom: 4px solid;
        border-right: 2px solid #708090;
        box-shadow: 0 6px 0 0 rgba(0,0,0,.15);
    }

    td {
        font-size: 16px;
        font-weight: normal;
        padding: 10px;
        border-bottom: 2px solid;
        box-shadow: 0 6px 0 0 rgba(0,0,0,.15)
    }

    h1 {
        text-align: center;
        line-height: 100%;
    }

</style>

<div>
    <h1>listofUsers of users</h1>
    <hr />

    <table>
        <thead>
            <tr>
                <th>
                    №
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.TotalWorked)
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <td>

                        @Html.DisplayFor(modelItem => item.Numeration)

                    </td>

                    <td>

                        @Html.DisplayFor(modelItem => item.UserId)

                    </td>

                    <td>

                        @Html.DisplayFor(modelItem => item.Name)

                    </td>

                    <td>

                        @Html.DisplayFor(modelItem => item.Surname)

                    </td>

                    <td>

                        @Html.DisplayFor(modelItem => item.UserTotalWorked)

                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>