@model TimeTracker.DTOs.UserReadDTO

@{
    ViewData["Title"] = "EditAttendanceOfUser";
}

<div class="row">
    <h1>Edit Users</h1>

    <h4>Edit Users</h4>
    <hr />
    <div class="col-md-4">
        <form asp-action="EditAttendanceOfUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" readonly />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartedWorkDayAt" class="control-label"></label>
                <input asp-for="StartedWorkDayAt" class="form-control" />
                <span asp-validation-for="StartedWorkDayAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Break" class="control-label"></label>
                <input asp-for="Break" class="form-control" />
                <span asp-validation-for="Break" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishedWorkDayAt" class="control-label"></label>
                <input asp-for="FinishedWorkDayAt" class="form-control" />
                <span asp-validation-for="FinishedWorkDayAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />

                <a asp-action="GetAttendanceOfUser" class="btn btn-success mx-2">Back to listofUsers</a>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
