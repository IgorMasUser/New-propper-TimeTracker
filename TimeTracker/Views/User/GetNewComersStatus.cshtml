@model IEnumerable<TimeTracker.Models.User>

@{
    ViewData["Title"] = "CheckEmployeesStatus";
}

<body>
    <h1>Check employees status</h1>
    <table>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.Email
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="GetUserApprovalStatus" asp-route-id="@user.ApprovalId"
                       class="btn btn-primary"> Check status</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>

<style>

    div {
        width: 33%;
        height: auto;
        margin-left: auto;
        margin-right: auto;
    }

    table {
        margin-left: auto;
        margin-right: auto;
        font-size: 18px;
        width: auto;
        height: auto;
        border-right: 2px solid #708090;
        border-left: 2px solid #708090;
        border-top: 7px solid #708090;
        border-bottom: 7px solid #708090;
        background: #FFFAFA;
    }

    th {
        font-size: 18px;
        font-weight: normal;
        padding: 10px;
        border-bottom: 4px solid;
        border-right: 2px solid #708090;
        box-shadow: 0 6px 0 0 rgba(0,0,0,.15);
    }

    td {
        font-size: 16px;
        font-weight: normal;
        padding: 10px;
        border-bottom: 2px solid;
        box-shadow: 0 6px 0 0 rgba(0,0,0,.15)
    }

    h1 {
        text-align: center;
        line-height: 100%;
    }

</style>

