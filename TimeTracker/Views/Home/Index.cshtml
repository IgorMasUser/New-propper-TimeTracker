@model TimeTracker.DTOs.UserCreateDTO

<body>
    <div>
        <p>
            <a asp-controller="User" asp-action="CreateUser" class="btn btn-primary" style="height:200px; width:250px;">Add new employee</a>

            <form asp-controller="User" asp-action="ToFillInWorkHours" style="width:350px; position: absolute; right:100px; top:100px">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StartedWorkDayAt" class="control-label"></label>
                    <input asp-for="StartedWorkDayAt" class="form-control" />
                    <span asp-validation-for="StartedWorkDayAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FinishedWorkDayAt" class="control-label"></label>
                    <input asp-for="FinishedWorkDayAt" class="form-control" />
                    <span asp-validation-for="FinishedWorkDayAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sent" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-primary">Cancel</a>
                </div>
            </form>
        </p>
    </div>

    <div style="height:200px; width:250px;">
        <p><a asp-controller="User" asp-action="GetAttendanceOfUser" class="btn btn-primary" style="height:200px; width:250px;">Check and Edit attendance Of employees</a></p>
    </div>

    <div style="height:200px; width:250px;">
        <p> <a asp-controller="User" asp-action="GetAllEmployeesInfo" class="btn btn-primary" style="height:200px; width:250px;">Check total attendance Of employees</a></p>
    </div>

</body>


